<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <ul>
  <% @book.errors.full_massages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>
 
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<label>Title<br>
<%= f.text_field :title %></label><br>

<label>Body<br>
<%= f.text_area :body %></label><br>
<%= f.submit 'Create Book' %>
<% end %>